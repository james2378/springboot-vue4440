<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dao.MeishiyudingDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.entity.MeishiyudingEntity" id="meishiyudingMap">
        <result property="meishimingcheng" column="meishimingcheng"/>
        <result property="meishifenlei" column="meishifenlei"/>
        <result property="fengmian" column="fengmian"/>
        <result property="jiage" column="jiage"/>
        <result property="yudingshuliang" column="yudingshuliang"/>
        <result property="yudingjine" column="yudingjine"/>
        <result property="meishididian" column="meishididian"/>
        <result property="meishipingfen" column="meishipingfen"/>
        <result property="shipinjieshao" column="shipinjieshao"/>
        <result property="meishizhuliao" column="meishizhuliao"/>
        <result property="meishikouwei" column="meishikouwei"/>
        <result property="meishitese" column="meishitese"/>
        <result property="pengrenfangfa" column="pengrenfangfa"/>
        <result property="meishixiangqing" column="meishixiangqing"/>
        <result property="yudingshijian" column="yudingshijian"/>
        <result property="yonghuzhanghao" column="yonghuzhanghao"/>
        <result property="epangxingming" column="epangxingming"/>
        <result property="ispay" column="ispay"/>
    </resultMap>

	<select id="selectListVO"
		resultType="com.entity.vo.MeishiyudingVO" >
		SELECT * FROM meishiyuding  meishiyuding         
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectVO"
		resultType="com.entity.vo.MeishiyudingVO" >
		SELECT  meishiyuding.* FROM meishiyuding  meishiyuding 	
 		<where> 1=1 ${ew.sqlSegment}</where>
	</select>

    <select id="selectListView"
		resultType="com.entity.view.MeishiyudingView" >

		SELECT  meishiyuding.* FROM meishiyuding  meishiyuding 	        
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectView"
		resultType="com.entity.view.MeishiyudingView" >
		SELECT * FROM meishiyuding  meishiyuding <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	

    <select id="selectValue" resultType="map" >
        SELECT ${params.xColumn}, ROUND(sum(${params.yColumn}),1) total FROM meishiyuding
        <where> 1=1 ${ew.sqlSegment}</where>
        group by ${params.xColumn}
    </select>

    <select id="selectTimeStatValue" resultType="map" >
        <if test = 'params.timeStatType == "日"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y-%m-%d') ${params.xColumn}, sum(${params.yColumn}) total FROM meishiyuding
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y-%m-%d')
        </if>
        <if test = 'params.timeStatType == "月"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y-%m') ${params.xColumn}, sum(${params.yColumn}) total FROM meishiyuding
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y-%m')
        </if>
        <if test = 'params.timeStatType == "年"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y') ${params.xColumn}, sum(${params.yColumn}) total FROM meishiyuding
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y')
        </if>
    </select>

    <select id="selectGroup" resultType="map" >
        SELECT ${params.column} , count(1) total FROM meishiyuding
        <where> 1=1 ${ew.sqlSegment}</where>
        group by ${params.column}
    </select>




</mapper>
